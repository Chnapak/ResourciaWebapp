{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "User ID=${DB_USER};Password=${DB_PASSWORD};Host=${DB_HOST};Port=${DB_PORT};Database=${DB_NAME}"
  },
  "SmtpSettings": {
    "Host": "sandbox.smtp.mailtrap.io",
    "Port": 25,
    "Username": "{secret}",
    "Password": "{secret}"
  },
  "EnvironmentSettings": {
    "FrontendHostUrl": "http://localhost:4200",
    "FrontendConfirmUrl": "/confirm-token",
    "SenderEmail": "info@resourcia.com",
    "SenderName": "Register Email"
  }
}
